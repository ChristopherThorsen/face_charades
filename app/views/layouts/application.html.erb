<!DOCTYPE html>
<html>
<head>
  <title>FaceCharades</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to "Face-Charades", :dashboard %>
  <% if current_user %>
    signed in as: <%= link_to current_user.name, current_user %> | <%= link_to "sign out", :session, method: :delete %>
<% end %>
  <div class="outer-container">
    <% if flash[:notice] %>
      <h2><%= flash[:notice] %></h2>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
